{
  "private": true,
  "name": "root",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci": "lerna run ci --stream",
    "lint": "lerna run lint --stream",
    "lint-file": "lerna run lint-file --npm-client=yarn -- --no-error-on-unmatched-pattern",
    "lint-fix": "lerna run lint-fix --stream",
    "prettier": "prettier --write .",
    "tsc": "lerna run tsc --stream",
    "test": "lerna run test --stream",
    "test-find-related": "lerna run test --npm-client=yarn --stream -- --findRelatedTests",
    "postinstall": "husky install",
    "pre-commit": "lint-staged && lerna run tsc --stream -- --incremental",
    "pre-push": "yarn lint && yarn tsc && yarn test"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/jest": "^29.2.3",
    "@types/react": "~18.0.14",
    "@types/react-native": "~0.70.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "jest": "^26.6.3",
    "lerna": "^6.0.3",
    "lint-staged": "^13.1.0",
    "metro-react-native-babel-preset": "^0.73.3",
    "prettier": "^2.8.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.6.3"
  }
}
